
<div class="PaymentMerchant">
	<h4>$MerchantName</h4>
	<% if $MerchantAddress %>
	<address>$MerchantAddress</address>
	<% end_if %>
	<% if $MerchantEmail %>Email: $MerchantEmail<% end_if %>
	<% if $MerchantPhone %>Phone: $MerchantPhone<% end_if %>
	<% if $MerchantWebsite %>Website: $MerchantWebsite<% end_if %>
</div>